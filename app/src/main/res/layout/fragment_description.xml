<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.DescriptionFragment">

    <TextView
        android:id="@+id/ProductDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:text="Desc 1"
        android:textColor="@color/text_300"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/gradientWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:background="@color/gradient_white"
        app:layout_constraintBottom_toTopOf="@id/ivArrow"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProductDesc"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="See More"
        android:textColor="@color/primary_800"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintTop_toBottomOf="@id/ProductDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:drawableEndCompat="@drawable/ic_arrow_down"
        android:drawableTint="@color/primary_800"/>

</androidx.constraintlayout.widget.ConstraintLayout>
