<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/_12sdp"
    android:paddingHorizontal="@dimen/_24sdp"
    android:gravity="center">

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_dialog_finish_order"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/confirmationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center"
        android:text="Konfirmasi Pembayaran"
        android:textColor="@color/primary_700"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_16ssp" />

    <TextView
        android:id="@+id/confirmationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_8sdp"
        android:gravity="center"
        android:text="Apakah yakin ingin mengonfirmasi pembayaran? Pastikan pembayaran sudah benar"
        android:textColor="@color/text_700"
        android:textSize="@dimen/_14ssp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp">

        <LinearLayout
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="@dimen/_12sdp"
            android:background="@drawable/bg_btn_outline_warning">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batal"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/warning_300"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingVertical="@dimen/_12sdp"
            android:background="@drawable/bg_btn_fill"
            android:backgroundTint="@color/primary_500">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ya, saya yakin"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
