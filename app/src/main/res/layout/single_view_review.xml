<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_6sdp"
    app:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/_8sdp">

        <!-- Product Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/bg_rounded_grey"
                android:scaleType="centerCrop"
                android:src="@drawable/fs8" />

            <!-- Product Title and Variant -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiasan Tanaman lidah mertua asal makasar"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productVariant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Varian: besar, + Pot"
                    android:textColor="#9E9E9E"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>
        </LinearLayout>

        <!-- Rating and Price Section - Horizontal Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp">

            <!-- Left side: Rating and Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Rating and Number -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Rating Number (49) -->
                    <TextView
                        android:id="@+id/ratingNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:textSize="@dimen/_9ssp"
                        android:textColor="@color/primary_500"
                        android:fontFamily="@font/poppins_regular" />

                    <!-- Rating Bar -->
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="1"
                        android:progressTint="#FFC107"
                        android:secondaryProgressTint="#FFC107"
                        android:isIndicator="true" />
                </LinearLayout>

                <!-- Review Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReview"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Beri Ulasan"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_10sdp"
                    app:cornerRadius="@dimen/_8sdp"
                    android:backgroundTint="#006B3E"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp" />
            </LinearLayout>

            <!-- Right side: Price Information -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Service Fee -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biaya Layanan: "
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/serviceFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Total Product -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total 1 produk: "
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/totalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 200.000"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
