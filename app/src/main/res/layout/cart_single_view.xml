<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="10dp"
    android:layout_marginBottom="10dp">

    <!-- Main Horizontal Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Checkbox -->

        <!-- Product Image -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/ceklis"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:background="@drawable/bg_circle_checkbox"
            app:buttonTint="@color/white" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_profile_fill"
            android:layout_marginEnd="@dimen/_8sdp" />

        <!-- Product Details and Controls Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Top Row: Product Info and Delete Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Product Name -->
                <TextView
                    android:id="@+id/nama_produk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/btn_delete"
                    android:text="Hiasan Tanaman lidah mertua asal makasar"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Delete Button -->
                <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    android:background="@color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/nama_produk" />

                <!-- Category -->
                <TextView
                    android:id="@+id/kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nama_produk"
                    android:text="Tanaman"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

                <!-- Price and Quantity Container -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kategori"
                    android:layout_marginTop="4dp">

                    <!-- Price -->
                    <TextView
                        android:id="@+id/harga_produk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 200.000"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />

                    <!-- Quantity Control -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_count_cart"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">

                        <ImageButton
                            android:id="@+id/minus"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="@dimen/_2sdp"
                            android:src="@drawable/ic_minus"
                            android:background="@drawable/bg_round_minus" />

                        <TextView
                            android:id="@+id/qty"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="1"
                            android:textSize="14sp"
                            android:textColor="@color/black" />

                        <ImageButton
                            android:id="@+id/plus"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="@dimen/_2sdp"
                            android:src="@drawable/ic_plus"
                            android:background="@drawable/bg_round_plus" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>