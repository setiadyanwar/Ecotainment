<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- Main Background with Light Color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_50"/>
            <corners android:radius="13dp"/>
        </shape>
    </item>

    <!-- Green Side Border -->
    <item android:gravity="left|center_vertical">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_500"/> <!-- Replace with your green color -->
            <corners android:topLeftRadius="12dp" android:bottomLeftRadius="12dp"/>
            <size android:width="10dp"/> <!-- Adjust the width of the green strip as needed -->
        </shape>
    </item>

</layer-list>
