<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="@android:color/white" />

    <!-- Border Color and Width -->
    <stroke
        android:width="1dp"
        android:color="@color/grey" /> <!-- Replace with a color from your palette -->

    <!-- Rounded Corners -->
    <corners android:radius="12dp" />

    <!-- Padding Inside the Tag (Optional) -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
